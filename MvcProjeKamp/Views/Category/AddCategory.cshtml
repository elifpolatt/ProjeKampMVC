@model EntityLayer.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>kategori ekleme sayfası</h1>

<br />

@using (Html.BeginForm("AddCategory" , "Category" , FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("Kategori Adı")
                    @Html.TextBoxFor(k => k.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryName)
                    <br />
                    @Html.Label("Açıklama yazınız")
                    @Html.TextBoxFor(k => k.CategoryDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryDescription)

                    <br />
                    <br />
                    <button class="btn btn-danger">Kaydet</button>
                </div>
            }
